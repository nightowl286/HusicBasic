<UserControl x:Class="HusicBasic.Views.PopupDialogHost"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:prism="http://prismlibrary.com/"             
             prism:ViewModelLocator.AutoWireViewModel="True" Visibility="{Binding Visible}" Style="{Binding Style}">
    <Grid>
        <Border Background="Black" Opacity="0.5">
            <Border.InputBindings>
                <MouseBinding MouseAction="LeftClick" Command="{Binding RequestClose}"/>
            </Border.InputBindings>
        </Border>
        <Grid Margin="10" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Border Effect="{DynamicResource SmallShadow}" Background="{DynamicResource Brush.Background}" CornerRadius="5"/>
            <ContentPresenter Margin="10" DataContext="{Binding DataContext}" Content="{Binding Content}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Grid>
    </Grid>
</UserControl>
